# https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json}]
indent_size = 4

[*.{txt,md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{sh,bash,zsh}]
indent_size = 4
